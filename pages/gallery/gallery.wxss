.gallery_bottom_layout {
  width: 86%;
  margin: 0 auto;
}

.gallery_btn_layout {
  margin-top: 4.5vh;
  margin-bottom: 3vh;
  width: 100%;
  /* margin: 4.5vh auto 3vh; */
}

.gallery_btn_style {
  background-color: rgba(0, 0, 0, 0.3);
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  color: white;
  font: 30rpx;
  font-weight: bold;
  margin: 0 auto;
}
