/* pages/island/island.wxss */

page {
  width: 100%;
  height: 100%;
  /* font-size: 16rpx; */
  background: radial-gradient(#b2beb1, #637976);
}

.list_item {
  /* 溢出隐藏 */
  /* overflow: hidden; */
  margin: 0 40rpx 50rpx;
  
  border-radius: 20rpx;
}

.list_item:first-child {
  margin-top: 0;
}


.list_item_top_img {
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  width: 100%;
  /* height: 320rpx; */
}


.list_item_top_text {
  padding-top: 2rpx;
  color: white;
  font-size: 78rpx;
  /* font-weight: lighter; */
  text-align: center;
  display: block;
  letter-spacing: 15rpx;
}

.list_item_top_text1 {
  margin-top: -20rpx;
  padding-bottom: 50rpx;
  color: white;
  font-size: 39rpx;
  /* font-weight: lighter; */
  text-align: center;
  display: block;
}

.scroll-view_H{
  white-space: nowrap;
}
.scroll-view-item_H{
  display: inline-block;
  width: 200rpx;
  margin: 0 16rpx;
  /* height: 300rpx; */
}
.scroll_text{
  display: block;
  text-align: center;
  color: #fff;
  font-size: 26rpx;
  padding: 8rpx 0 18rpx;
}
.scroll_img{
  width: 200rpx;
  height: 200rpx;
  display: block;
  border-radius: 20rpx;
}