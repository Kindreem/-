.but1{
  position: fixed;
  bottom: 0rpx;
  left: 0;
  right: 0;
  /* margin-top: 30rpx; */
  width: 100%;
  height: 85rpx;
  line-height: 85rpx;
  color: #fff;
}
.butleft {
  width: 50%;
  background-color: #fff;
  text-align: center;
  color: #333;
  display: inline-block;
}
.butright {
  width: 50%;
  background-color: #15cf22;
  text-align: center;
  display: inline-block;
}

.butleft button{
 width: 100%; 
 height: 100%;
 display: inline-block;
 background-color: #fff;
 border: none;
 outline: none;
}
.butright button{
 width: 100%; 
 height: 100%;
 display: inline-block;
 background-color: #15cf22;
 border: none;
 outline: none;
 color: #fff;
 font-weight: 600;
}
.butright button::after{ border: none; }
.butleft button::after{ border: none; }

.butext {
  margin-left: 6rpx;
  background-color: #f26c4f;
  padding: 2rpx 6rpx;
  border-radius: 6rpx;
  font-size: 24rpx;
  /* height: 20rpx;
  width: 20rpx; */
}
.ptext {
  font-size: 24rpx;
}

.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 9000;
  opacity: 0.25;
}
 
.modalDlg {
  width: 90%;
  /* height: 450rpx; */
  position: fixed;
  bottom: 3.5%;
  left: 50%;
  transform:translateX(-50%);
  z-index: 9999;
  display: flex;
  flex-direction: column;
  align-items: center;
  background:transparent;
}
